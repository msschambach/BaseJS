{
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "baseUrl": "src",
    "sourceMap": true,
    "removeComments": true,
    "target": "ES6",
    "lib": ["DOM", "ES6"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "allowJs": true
  }
}